              </div>
            </div>
          </div>
          <script>
            var widthPage = $(window).width()
            widthPage < 768 ? $('.thankYou img').attr('src', 'https://cdn.shopify.com/s/files/1/0103/1923/3081/files/008aee82ada15ba234379b26947cc019.png?v=1650099076') : $('.thankYou img').attr('src', 'https://cdn.shopify.com/s/files/1/0103/1923/3081/files/e512ead841d5e9dc2590714b1a24d7cc.png?v=1650099075')
            var urls = window.location.href;
            var key = urls.split('_')[0]
           
            if (urls.indexOf('thank') != -1) {
              $('.checkout_thankYou').css('display', 'block')
            }
          </script>
        </main>
        <footer class="main__footer" role="contentinfo">
          {{ content_for_footer }}
        </footer>
      </div>
      <aside class="sidebar" role="complementary">
        <div class="sidebar__header">
          {{ content_for_logo }}
        </div>
        <div class="sidebar__content">
         
