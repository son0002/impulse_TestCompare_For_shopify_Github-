
{% if section.settings.space_around %}
  <div class="index-section">
{% endif %}

<div class="page-width">
      {% if section.settings.heading != blank %}
        <div class="text-center page-width page-width--narrow">
          <h2>{{ section.settings.heading | escape }}</h2>
        </div>
      {% endif %}
      <div class="grid grid--uniform">
        {%- for block in section.blocks -%}
          {%- assign img_link = block.settings.cta_link1  -%}
          <div class="grid__item medium-up--one-third aos-init aos-animate">
            <div class="grid">
               {% if block.settings.image != blank %}
                  {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <!-- custom image -->
                  <div class="grid__item small--one-third" data-aos="row-of-2">
                    <div class="image-wrap">
                      <a class='article__grid-image navigable rte__image' href="{{ img_link }}">
                        <img
                          class="lazyload"
                          data-src="{{ img_url }}"
                          data-widths="[360, 540, 720, 900, 1080, 1600]"
                          data-aspectratio="{{ img_url.aspect_ratio }}"
                          data-sizes="auto"
                          alt="{{ img_url.alt }}"
                        >
                        <noscript>
                          <img class="lazyloaded" src="{{ block.settings.image | img_url: '600x' }}" alt="{{ image.alt }}">
                        </noscript>
                      </a>
                    </div>
                  </div>
                {%- if block.settings.textarea != blank -%}
                      <div class='grid__item small--two-thirds'>
                      
                          <div class="article__grid-meta rte">
                          <a href="{{ img_link }}" alt='' class='article__title navigable'>
                           <b> {{ block.settings.textarea | newline_to_br }}</b>
                            </a>
                            <p> {{ block.settings.texts | newline_to_br }}</p>
                          </div>
                      </div>
                    {%- endif -%}
                {%- else -%}
                  <div class="type-product__image">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                  <div class="type-product__image">
                    {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
               {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
  </div>
 

{% if section.settings.space_around %}
  </div>
{% endif %}
{% schema %}
{
  "name": "customize recipes",
  "blocks": [
    {
      "name": "customize recipes",
      "type": "zhang",
      "limit": 3,
      "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
        {
            "type": "text",
            "id": "textarea",
            "label": "Text",
            "default": "<ol>Include the smaller details of your promotion in text below the title.</ol>"
          },
          {
            "type": "text",
            "id": "texts",
            "label": "Text",
            "default": "Include text"
          },
       
       {
            "type": "text",
            "id": "cta_link1",
            "label": "Button #1 link"
          }

      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Block Heading",
      "default": "test heading"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "customize recipes"
      },
      "category": {
        "en": "customize recipes"
      }
    }
  ]
}
{% endschema %}

